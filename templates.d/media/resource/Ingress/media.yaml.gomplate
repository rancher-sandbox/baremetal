---
kind: Ingress
apiVersion: networking.k8s.io/v1
metadata:
  name: media
  annotations:
    cert-manager.io/issuer: letsencrypt-prod
    external-dns.alpha.kubernetes.io/hostname: {{ .Env.MEDIA_SERVER_URL }}
spec:
  tls:
    - hosts:
        - {{ .Env.MEDIA_SERVER_URL }}
      secretName: media-certificate
  defaultBackend:
    service:
      name: media
      port:
        number: 80
  #   resource:
  #     kind: Service
  #     name: assets
  rules:
    - host: {{ .Env.MEDIA_SERVER_URL }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: media
                port:
                  number: 80
              # resource:
              #   kind: Service
              #   name: assets